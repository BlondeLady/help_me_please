 class Bottle
    {
        private double _amount;
        private string _liquid;
        private bool _isEmpty;
        public Bottle() { }
        public Bottle(double amount, string liquid, bool isEmpty)
        {
            Amount = amount;
            Liquid = liquid;
            IsEmpty = isEmpty;

        }
        public double Amount
        {
            get => _amount;
            set => _amount = value != 0 ? value : 1;
        }
        public string Liquid
        {
            get => _liquid;
            set => _liquid = value != null ? value : "Выберите тип напитка";
        }
        public bool IsEmpty
        {
            get => _isEmpty;
            set => _isEmpty = value != true ? value : false;
        }
        public override string ToString() => $"{ Amount } { Liquid } { IsEmpty }";
        public static Bottle[] GetOnlyEmpty(Bottle[] bottles)
        {
            Bottle[] newOne = new Bottle[0];
            foreach (var g in bottles)
            {
                if (g.IsEmpty)
                {
                    Array.Resize(ref newOne, newOne.Length + 1);
                    newOne[newOne.Length - 1] = g;
                }
            }
            return newOne;
        }
        
    }
    class Program
    {
        static void Main(string[] args)
        {
            Bottle[] bottlesList = new Bottle[]
            {
                new Bottle(230, "Вино", true),
                new Bottle(90, "Водка", false),
                new Bottle(500, "Коньяк", false),
                new Bottle(450, "Виски", true),
                new Bottle(35, "Пиво", true),
                new Bottle(60, "Эль", true)
            };
            foreach (var g in Bottle.GetOnlyEmpty(bottlesList)) 
            Console.WriteLine(g);
            Console.ReadKey();
        }
    }
